{
  "name": "react-live-runner",
  "version": "1.0.4",
  "description": "Run your React code on the go",
  "homepage": "https://react-runner.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihgwu/react-runner.git"
  },
  "author": "Neo Nie <nihgwu@live.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "component",
    "preview",
    "runner",
    "live"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.js"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "build": "microbundle build --jsx React.createElement  --jsxFragment React.Fragment",
    "watch": "microbundle watch --jsx React.createElement  --jsxFragment React.Fragment",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "prettier": "prettier --write '**/src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "prism-react-renderer": "^1.2.1",
    "react-runner": "^1.0.3",
    "react-simple-code-editor": "^0.13.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18",
    "react-dom": "^16.8.0 || ^17 || ^18"
  },
  "browserslist": [
    "Chrome > 61",
    "Edge > 16",
    "Firefox > 60",
    "Safari > 10.1"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
