{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "yarn --cwd website dev",
    "test": "lerna run test",
    "test:ci": "lerna run test:ci",
    "typecheck": "lerna run typecheck",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "prettier": "lerna run prettier",
    "deploy": "yarn --cwd website deploy",
    "postinstall": "yarn --cwd website",
    "prepush": "yarn lint",
    "prerelease": "yarn clean & yarn build",
    "release": "lerna publish",
    "sync:readme": "cp README.md packages/react-runner/ && cp README.md packages/react-live-runner/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "website/**/*.{js,ts,tsx}": [
      "prettier --write",
      "yarn --cwd website eslint --fix"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^13.0.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^18.0.4",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "microbundle": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-test-renderer": "^18.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
